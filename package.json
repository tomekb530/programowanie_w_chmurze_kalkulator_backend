{
  "name": "calculator-rest-backend",
  "version": "1.0.0",
  "description": "REST API backend dla kalkulatora",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern='tests/.*\\.test\\.js$' --testPathIgnorePatterns='tests/e2e/'",
    "test:e2e": "jest --testPathPattern='tests/e2e/' --maxWorkers=1 --forceExit",
    "test:e2e:ci": "jest --testPathPattern='tests/e2e/' --maxWorkers=1 --forceExit --detectOpenHandles",
    "test:all": "jest",
    "test:watch": "jest --watch --testPathIgnorePatterns='tests/e2e/'",
    "test:coverage": "jest --coverage --testPathIgnorePatterns='tests/e2e/'",
    "test:e2e:watch": "jest --watch --testPathPattern='tests/e2e/'"
  },
  "keywords": [
    "calculator",
    "rest",
    "api",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "supertest-session": "^5.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!tests/**",
      "!coverage/**",
      "!server.js"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageDirectory": "coverage"
  }
}
